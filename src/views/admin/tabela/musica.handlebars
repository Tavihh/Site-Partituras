<link rel="stylesheet" href="/css/partials/tabela.css">
{{>_message}}
<section class="tabela-form">
    <div class="tabela-titulo">
        <h2>Músicas</h2>
        <button onclick="location='/admin/cadastrar/musica'"><img src="/imgs/icons/add.png" alt=""></button>
    </div>

    <form action="/admin/psq/musica" method="get">
        <input type="search" name="psq" placeholder="Pesquise uma Música">
        <button type="submit"></button>
    </form>

    <table>
        <thead>
            <tr>
                <th>Nome</th>
                <th>Instrumento</th>
                <th>Views</th>
            </tr>
        </thead>

        <tbody>
            {{#each musicas}}
            <tr onclick="location.href='/admin/musica/{{id}}'">
                <td>{{nome}}</td>
                <td>{{instrumento.nome}}</td>
                <td>{{views}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</section>