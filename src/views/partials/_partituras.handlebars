{{#if temMusica}}
<h3>{{nomeExibicao}}</h3>
<div class="botoes">
    <div class="left"><button class="btn-left" onclick="javascript:document.querySelectorAll('.secao{{id}}')[0].scrollBy({left:-370, behavior:'smooth'})"></button></div>
